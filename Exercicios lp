import java.util.Scanner;

public class OrdemCrescente {
    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in);

        System.out.print("Digite o primeiro valor: ");
        int valor1 = scanner.nextInt();

        System.out.print("Digite o segundo valor: ");
        int valor2 = scanner.nextInt();

        if (valor1 < valor2) {
            System.out.println("Valores em ordem: " + valor1 + ", " + valor2);
        } else {
            System.out.println("Valores em ordem: " + valor2 + ", " + valor1);
        }

        scanner.close();
    }
}



-EXERCICIO 14

import java.util.Scanner;

public class DuracaoJogoXadrez {
    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in);

        System.out.print("Digite a hora de início do jogo (em horas inteiras): ");
        int horaInicio = scanner.nextInt();

        System.out.print("Digite a hora de fim do jogo (em horas inteiras): ");
        int horaFim = scanner.nextInt();

        int duracao;

        if (horaFim >= horaInicio) {
            duracao = horaFim - horaInicio;
        } else {
            duracao = (24 - horaInicio) + horaFim; 
        }

        System.out.println("A duração do jogo foi de " + duracao + " horas.");

        scanner.close();
    }
}

-EXERCICIO 15

import java.util.Scanner;

public class SalarioFuncionario {
    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in);

        System.out.print("Digite o numero de horas trabalhadas no mes: ");
        int horasTrabalhadas = scanner.nextInt();

        System.out.print("Digite o valor do salario por hora: ");
        double salarioPorHora = scanner.nextDouble();

        int horasNormais = 160; 

        double salarioBase = horasNormais * salarioPorHora; 

        double salarioExtra = 0.0;

        if (horasTrabalhadas > horasNormais) {
            int horasExtras = horasTrabalhadas - horasNormais;
            salarioExtra = horasExtras * salarioPorHora * 1.5 ;
        }

        double salarioTotal = salarioBase + salarioExtra;

        System.out.printf("O salario total do funcionario e: " + salarioTotal);

        scanner.close();
    }
}

-EXERCICIO 16

import java.util.Scanner;

public class DespesaTrimestral {
    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in);

        System.out.print("Digite o gasto de janeiro: R$ ");
        double gastoJaneiro = scanner.nextDouble();

        System.out.print("Digite o gasto de fevereiro: R$ ");
        double gastoFevereiro = scanner.nextDouble();

        System.out.print("Digite o gasto de marco: R$ ");
        double gastoMarço = scanner.nextDouble();

        double despesaTotal = gastoJaneiro + gastoFevereiro + gastoMarço;

        double mediaMensal = despesaTotal / 3;

        System.out.println("Despesa total no trimestre: " + despesaTotal);
        System.out.printf("Media mensal de gastos: " + mediaMensal);

        scanner.close();
    }
}

-EXERCICIO 17

import java.util.Scanner;

public class MediaLP1 {
    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in);

        System.out.print("Digite a nota da P1: ");
        double P1 = scanner.nextDouble();

        System.out.print("Digite a nota da E1: ");
        double E1 = scanner.nextDouble();

        System.out.print("Digite a nota da E2: ");
        double E2 = scanner.nextDouble();

        System.out.print("Digite a nota do API: ");
        double API = scanner.nextDouble();

        System.out.print("Digite o valor de X: ");
        double X = scanner.nextDouble();

        System.out.print("Digite a nota de SUB: ");
        double SUB = scanner.nextDouble();

        double parte1 = P1 * 0.6 + ((E1 + E2) / 2) * 0.4;
        double parte2 = Math.max((parte1 - 5.9), 0) / (parte1 - 5.9);
        double mediaLP1 = (parte1 * 0.5) + (parte2 * (API * 0.5)) + X + (SUB * 0.3);

        System.out.printf("A media final de LP1 e: ", mediaLP1);

        scanner.close();
    }
