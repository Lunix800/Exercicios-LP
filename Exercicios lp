        int valor1 = scanner.nextInt();

        System.out.print("Digite o segundo valor: ");
        int valor2 = scanner.nextInt();

        if (valor1 > valor2) {
            System.out.println("O maior valor e: " + valor1);
        } else {
            System.out.println("O maior valor e: " + valor2);
        }

        scanner.close();
    }
}


